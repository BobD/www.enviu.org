	{{#each items}}
		<div class='caroussel__item'>

			<div class='caroussel__item-content'>
	
				<div class='caroussel__info'>
					
					<div class='caroussel__info-open'>
						<i class='icon fa fa-angle-down'></i>
					</div>

					<div class='caroussel__info-header'>{{title}}</div>

					<ul class='caroussel__info-list'>
						<li  class='caroussel__info-list-item'>
							<i class='icon icon-Enviu_icons_locatiemarker'></i>
							<span>Location</span>
						<li>
						<li  class='caroussel__info-list-item'>
							<i class='icon icon-Enviu_icons_persoon'></i>
							<span>Person</span>
						<li>
					</ul>

					<p class='caroussel__info-body'>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum.</p>

					<div class='caroussel__info-footer'>
						<div class='social-share'>
							<ul class='social-share__list'>
								<li class='social-share__item'>
									<a href='' class='social-share__link'>
										<i class='icon icon-Enviu_icons_facebook_circle'></i>
									</a>
								</li>	
								<li class='social-share__item'>
									<a href='' class='social-share__link'>
										<i class='icon icon-Enviu_icons_twitter_circle'></i>
									</a>
								</li>	
								<li class='social-share__item'>
									<a href='' class='social-share__link'>
										<i class='icon icon-Enviu_icons_linkedin_circle'></i>
									</a>
								</li>
							</ul>
							<a href='' class='social-share__title'>
								<span>Go to the website</span>
								<i class='icon fa fa-long-arrow-right'></i>
							</a>
						</div>
					</div>
				</div>

				<div class='caroussel__image' style='background-image:url("{{image}}")'>

				</div>

			</div>

		</div>
	{{/each}}

</div>